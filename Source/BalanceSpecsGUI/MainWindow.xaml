<Window x:Class="BalanceSpecsGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:w="clr-namespace:BalanceSpecsGUI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalanceSpecsGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="371.569" Width="882.843">
    <Window.Resources>
        <w:MethodToValueConverter x:Key="MethodToValueConverter"/>
    </Window.Resources>
    <Grid>
        <Label Content="{Binding name}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <ListBox HorizontalAlignment="Left" Height="274" Margin="10,25,0,0" VerticalAlignment="Top" Width="280" ItemsSource="{Binding gaparams}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Padding="5,0,5,0" Text="{Binding Name}" />
                        <TextBlock Text=" = " />
                        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Value.Value, Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="ParametersList" HorizontalAlignment="Left" Height="274" Margin="295,25,0,0" VerticalAlignment="Top" Width="298" ItemsSource="{Binding parameters, Mode=TwoWay}" DisplayMemberPath="name"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="598,273,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <StackPanel Margin="627,45,63,96" Orientation="Vertical" DataContext="{Binding SelectedItem, ElementName=ParametersList}" Height="200">
            <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="160" Orientation="Horizontal">
                <TextBlock Text="Name" Width="80"/>
                <TextBox TextWrapping="Wrap" Text="{Binding name, FallbackValue='noname', Mode=TwoWay}" Height="23" Width="80"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="160" Orientation="Horizontal">
                <TextBlock Text="Range Min" Width="80"/>
                <TextBox TextWrapping="Wrap" Text="{Binding rangeMin, FallbackValue=0, Mode=TwoWay}" Height="23" Width="80"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Add" HorizontalAlignment="Left" Margin="295,304,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
