<Window x:Class="BalanceSpecsGUI.Windows.GARun"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalanceSpecsGUI.Windows"
        mc:Ignorable="d"
        Title="GARun" Height="313.445" Width="552.101">
    <Grid>
        <ListBox x:Name="ProgressListBox" HorizontalAlignment="Left" Height="262" Margin="10,10,0,0" VerticalAlignment="Top" Width="130" ItemsSource="{Binding BestFitnessOverTime}"/>
        <Label x:Name="IsRunningLabel" Content="{Binding isStarted}" HorizontalAlignment="Left" Margin="153,22,0,0" VerticalAlignment="Top"/>
        <Button Content="Start / Pause" HorizontalAlignment="Left" Margin="153,53,0,0" VerticalAlignment="Top" Width="115" Click="Button_Click"/>
        <Button Content="Kill Run" HorizontalAlignment="Left" Margin="153,85,0,0" VerticalAlignment="Top" Width="115" Click="Button_Click_1"/>

    </Grid>
</Window>
